<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/null_value"
            android:id="@+id/g_digital"
            android:textColor="@color/text_overlay"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/gmeter_width"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:textSize="@dimen/gmeter_tick_text"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_num_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tick_mark"
            android:textSize="@dimen/gmeter_tick_mark"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_tick_left"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.5"
            android:textSize="@dimen/gmeter_tick_text"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_num_midleft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tick_mark"
            android:textSize="@dimen/gmeter_tick_mark"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_tick_midleft"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0"
            android:textSize="@dimen/gmeter_tick_text"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_num_center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tick_mark"
            android:textSize="@dimen/gmeter_tick_mark"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_tick_midright"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="0.5"
            android:textSize="@dimen/gmeter_tick_text"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_num_midright"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/tick_mark"
            android:textSize="@dimen/gmeter_tick_mark"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_tick_right"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="1"
            android:textSize="@dimen/gmeter_tick_text"
            android:textColor="@color/text_overlay"
            android:id="@+id/g_num_right"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/g_analog">

        <SeekBar
            android:layout_width="@dimen/gmeter_width"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/g_analog_indicator"
            android:max="@integer/gmeter_resolution"
            android:progressDrawable="@android:color/transparent" />

        <SeekBar
            android:layout_width="@dimen/gmeter_width"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/g_analog_back"
            android:thumb="@android:color/transparent" />
    </RelativeLayout>

</LinearLayout>
